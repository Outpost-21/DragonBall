<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<DamageDef>
		<defName>DragonBall_Paralasis</defName>
		<label>paralasis</label>
		<harmsHealth>false</harmsHealth>
		<makesBlood>false</makesBlood>
		<additionalHediffs>
			<li>
				<hediff>DragonBall_Paralasis</hediff>
				<severityFixed>1</severityFixed>
