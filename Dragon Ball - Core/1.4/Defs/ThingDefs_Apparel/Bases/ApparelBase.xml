<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef Name="DragonBall_ApparelFabricatedBase" Abstract="True">
		<thingClass>Apparel</thingClass>
		<category>Item</category>
		<drawerType>MapMeshOnly</drawerType>
		<selectable>True</selectable>
		<pathCost>14</pathCost>
		<useHitPoints>True</useHitPoints>
		<techLevel>Ultra</techLevel>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
		<drawGUIOverlay>true</drawGUIOverlay>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<!-- <li>DragonBall_Workbench</li> -->
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<defaultIngredientFilter>
				<categories>
					<li>Root</li>
				</categories>
				<disallowedThingDefs>
					<li>Gold</li>
					<li>Silver</li>
					<li>Plasteel</li>
					<li>Jade</li>
					<li>Uranium</li>
				</disallowedThingDefs>
			</defaultIngredientFilter>
		</recipeMaker>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<Beauty>-3</Beauty>
		</statBases>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>True</alwaysHaulable>
		<tickerType>Never</tickerType>
		<burnableByRecipe>true</burnableByRecipe>
		<smeltable>true</smeltable>
		<comps>
			<li Class="CompProperties_Forbiddable" />
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li Class="CompProperties_Styleable"></li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="DragonBall_ApparelFabricatedBase" Name="DragonBall_UniformBodyFabricatedBase" Abstract="True">
		<costList>
			<Synthread>60</Synthread>
		</costList>
		<statBases>
			<Mass>0.5</Mass>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>200</MaxHitPoints>
			<ArmorRating_Sharp>0.28</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Heat>0.15</ArmorRating_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
		<apparel>
			<layers>
				<li>OnSkin</li>
			</layers>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Arms</li>
				<li>Hands</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="DragonBall_ApparelFabricatedBase" Name="DragonBall_UniformHeadwearFabricatedBase" Abstract="True">
		<costList>
			<Synthread>20</Synthread>
		</costList>
		<statBases>
			<Mass>0.2</Mass>
			<WorkToMake>3000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<ArmorRating_Sharp>0.28</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Heat>0.15</ArmorRating_Heat>
			<Insulation_Cold>3</Insulation_Cold>
			<Insulation_Heat>3</Insulation_Heat>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<apparel>
			<layers>
				<li>Overhead</li>
			</layers>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

</Defs>