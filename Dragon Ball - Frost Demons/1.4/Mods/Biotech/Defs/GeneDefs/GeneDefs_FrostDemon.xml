	<GeneDef>
		<defName>DragonBall_FrostBody</defName>
		<label>frost demon skin</label>
		<labelShortAdj>demonskin</labelShortAdj>
		<description>Carriers of this gene grow a light armoured layer of skin over their normal skin.</description>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>7403</displayOrderInCategory>
		<iconPath>DragonBall/GeneIcons/Gene_FrostBody</iconPath>
		<iconColor>(0.75, 0.75, 0.75)</iconColor>
		<exclusionTags>
			<li>Skin</li>
			<li>Fur</li>
		</exclusionTags>
		<selectionWeight>0</selectionWeight>
		<statOffsets>
			<ToxicEnvironmentResistance>0.5</ToxicEnvironmentResistance>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.1</ArmorRating_Heat>
		</statOffsets>
		<missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
		<graphicData>
			<fur>DragonBall_FrostBody</fur>
			<colorType>Skin</colorType>
			<skinIsHairColor>false</skinIsHairColor>
			<tattoosVisible>true</tattoosVisible>
		</graphicData>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<useSkinColorForFur>true</useSkinColorForFur>
				<useMaskForFur>true</useMaskForFur>
				<backgroundPathEndogenes>DragonBall/GeneIcons/EndogeneBG</backgroundPathEndogenes>
				<backgroundPathXenogenes>DragonBall/GeneIcons/XenogeneBG</backgroundPathXenogenes>
			</li>
		</modExtensions>
	</GeneDef>

</Defs>